@model EntityModelMVC.Properties.EMPLOYEE 
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Employee</h2>

@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()
    <h4>Edit an Employee</h4>
    <hr/>

    @Html.ValidationSummary(true)

    <!--Id is not for edit-->
    @Html.HiddenFor(model => model.EId)

    <div>
        @Html.LabelFor(model => model.EName)
        @Html.EditorFor(model => model.EName)
        @Html.ValidationMessageFor(model => model.EName)
    </div>

    <div>
        @Html.LabelFor(model => model.DeptId)
        @Html.EditorFor(model => model.DeptId)
        @Html.ValidationMessageFor(model => model.DeptId)
    </div>

    <div>
        <input type="submit" value="save" />
    </div>
 }

