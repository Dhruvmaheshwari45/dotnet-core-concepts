@model IEnumerable<DataAccessLayer.EmpOrm>
@{
    ViewBag.Title = "Index";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New Employee", "Create", null, new {@class="btn btn-primary mb-3"})
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Employee Id</td>
            <td>Employee Name</td>
            <td>Department Id</td>
            <td class="text-center">Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
         {
            <tr>
                <td>@item.EmpId</td>
                <td>@item.EmpName</td>
                <td>@item.DeptId</td>
                <td class="text-center">

                    <!--Edit Employee-->
                    @Html.ActionLink("Edit", "Edit", new {id=item.EmpId}, new {@class="btn btn-warning btn-sm"})

                    <!--Delete Employee-->
                    @using (Html.BeginForm("Delete", "Home", new { id = item.EmpId }, FormMethod.Post, new { @class = "d-inline" }))
                    {
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    }
                </td>

            </tr>
         }
    </tbody>
</table>

